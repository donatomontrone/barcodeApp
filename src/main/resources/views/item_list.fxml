<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.doazz.barcode.controller.ItemListController">

    <VBox stylesheets="@../table.css">
        <HBox alignment="CENTER_RIGHT" />

        <TableView fx:id="itemTable" blendMode="SRC_ATOP" prefHeight="460.0" prefWidth="740.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="columnBarcode" editable="false" prefWidth="210" resizable="false" text="Barcode" />
                <TableColumn fx:id="columnName" editable="false" prefWidth="210" resizable="false" text="Nome" />
                <TableColumn fx:id="columnPrice" editable="false" prefWidth="205.0" resizable="false" text="Prezzo" />
                <TableColumn fx:id="columnAction" editable="false" prefWidth="135.0" resizable="false" sortable="false" />
            </columns>
        </TableView>

        <Button alignment="CENTER_RIGHT" onAction="#onAddItem" styleClass="custom-add-button" text="Nuovo Articolo">
            <VBox.margin>
                <Insets bottom="10.0" left="660.0" top="10.0" />
            </VBox.margin>
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
    </VBox>
</VBox>
